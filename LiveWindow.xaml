<Window x:Class="MessangerClient.LiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessangerClient"
        xmlns:controls="clr-namespace:MessangerClient.Controls"
        mc:Ignorable="d"
        Title="LiveWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">
    <DockPanel>
        <controls:TopBar DockPanel.Dock="Top" VerticalAlignment="Top" TopBarHeader="Live" CanMove="True"></controls:TopBar>
        <Rectangle x:Name="screen" Fill="Black"></Rectangle>
    </DockPanel>
</Window>
