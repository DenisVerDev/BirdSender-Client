<UserControl x:Class="MessangerClient.Controls.ServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessangerClient.Controls"
             mc:Ignorable="d" 
             Height="40" MinWidth="200" HorizontalAlignment="Center" Margin="0,15,0,0">
    <DockPanel>
        <Border CornerRadius="20" Background="White">
             <Label x:Name="lbcontent" FontWeight="Bold" Foreground="#6CC4C7" FontSize="9" FontFamily="Arial" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding RelativeSource={RelativeSource AncestorType=local:ServiceControl}, Path=Text}"></Label>
        </Border>
    </DockPanel>
</UserControl>
